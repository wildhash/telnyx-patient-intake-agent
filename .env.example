# Telnyx Configuration
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_PUBLIC_KEY=your_telnyx_public_key_here
TELNYX_CONNECTION_ID=your_telnyx_connection_id_here
TELNYX_PHONE_NUMBER=+1234567890

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
PORT=5000

# Ngrok Configuration (optional, for development)
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
PUBLIC_URL=https://your-domain.com

# Storage Configuration
# MemVerge (Hot Storage) - Optional
MEMVERGE_ENABLED=false
MEMVERGE_API_KEY=your_memverge_api_key_here
MEMVERGE_ENDPOINT=https://api.memverge.com

# ApertureData (Cold Storage) - Optional
APERTUREDATA_ENABLED=false
APERTUREDATA_HOST=localhost
APERTUREDATA_PORT=55555
APERTUREDATA_USERNAME=admin
APERTUREDATA_PASSWORD=your_password_here

# Backend API Configuration
BACKEND_API_URL=https://your-backend-api.com/intake
BACKEND_API_KEY=your_backend_api_key_here

# Call Configuration
MAX_CALL_DURATION=1800
RECORDING_ENABLED=true
TRANSCRIPTION_ENABLED=true

# Database Configuration (SQLite by default)
DATABASE_URL=sqlite:///patient_intake.db
